{
	"name": "blue_server",
	"version": "0.1.0",
	"description": "",
	"type": "module",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"build": "wireit",
		"serve": "wireit"
	},
	"wireit": {
		"build": {
			"command": "npx tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		},
		"serve": {
			"#comment": "restart the server when the build files changed",
			"command": "node lib/index.js",
			"service": true,
			"files": [
				".env.vault"
			],
			"dependencies": [
				"build"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/VandeurenGlenn/blue_server.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/VandeurenGlenn/blue_server/issues"
	},
	"homepage": "https://github.com/VandeurenGlenn/blue_server#readme",
	"devDependencies": {
		"@types/cron": "^2.0.1",
		"@types/koa": "^2.13.6",
		"@types/koa-cors": "^0.0.2",
		"@types/koa-router": "^7.4.4",
		"@types/node": "^20.2.5",
		"dotenv": "^16.1.4",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"node-fetch": "^3.3.1",
		"prettier": "^2.8.8",
		"typescript": "^5.1.3",
		"wireit": "^0.9.5"
	},
	"dependencies": {
		"cron": "^2.3.1",
		"koa": "^2.14.2",
		"koa-cors": "^0.0.16",
		"koa-router": "^12.0.0",
		"node-fetch": "^3.3.1"
	}
}
