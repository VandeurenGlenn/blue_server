{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"moduleResolution": "node",
		"strict": true,
		"rootDir": "src",
		"outDir": "lib",
		"declaration": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": false,
		"types": ["vite/client"]
	},
	"include": ["src/**/*"],
	"exclude": []
}
