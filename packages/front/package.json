{
	"name": "@blueserver/front",
	"type": "module",
	"scripts": {
		"dev": "wireit",
		"build": "wireit"
	},
	"wireit": {
		"save:top-100-data": {
			"command": "node ./scripts/save-top-100-information.js",
			"files": [
				"scripts/save-top-100-information.js"
			],
			"output": [
				"src/top100.json"
			],
			"dependencies": [
				"../server:build"
			]
		},
		"dev": {
			"command": "rm -rf node_modules/.vite && vite --host",
			"service": true,
			"dependencies": [
				"save:top-100-data"
			]
		},
		"build": {
			"command": "vite build",
			"dependencies": [
				"save:top-100-data"
			],
			"files": [
				"vite.config.js"
			],
			"output": [
				"dist"
			]
		}
	},
	"devDependencies": {
		"@blueserver/server": "*",
		"@blueserver/types": "^1.0.0",
		"@material/web": "^1.0.0-pre.9",
		"custom-element-decorator": "^0.4.0",
		"lit": "^2.7.5",
		"lit-with-styles": "^1.1.0",
		"tailwindcss": "^3.3.2",
		"toastit": "^0.0.4",
		"vite": "^4.3.9",
		"vite-lit-with-tailwind": "^2.1.1"
	}
}
